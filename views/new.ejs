<%- include("partials/header") %>

<div class="ui raised very padded text container segment">
    <h2 class="ui header">New Post</h2>
    <form class="ui form" action="/friends" method="POST">
        <div class="field">
          <label>Title</label>
          <input type="text" name="friend[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="friend[image]" placeholder="Image URL">
          </div>
        <div class="ui form">
            <div class="field">
              <label>Content</label>
              <textarea type="text" placeholder="Content" name="friend[body]" required></textarea>
        </div>
        <button class="ui secondary button">Submit</button>
    </form>
    
  </div>
