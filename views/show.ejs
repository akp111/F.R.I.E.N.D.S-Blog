<%- include("partials/header") %>
<br>
<br>
<div class="ui raised very padded text container segment">
   <h1 class="ui huge grey block header"><%= blog.title %></h1>
   <div class="item">
      <img class="ui big rounded image" src="<%= blog.image %>">
        <p style="color: black;text-align: right;"><%= blog.Created.toDateString() %></p>
        <div class="content">
            <p style="color: black;"><%- blog.body %></p>
        </div>
    </div>
    <br>
    <br>
    <div>
    <a href="/friends/<%= blog._id %>/edit"><button id="edit" class="ui blue button">Update</button></a>
    <form action="/friends/<%= blog._id %>?_method=DELETE" method="POST">
        <button id="delete" class="ui red button">Delete</button>
    </form>
</div>
</div>
<%- include("partials/footer") %>