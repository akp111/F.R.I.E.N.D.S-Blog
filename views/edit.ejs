<%- include("partials/header") %>

<div class="ui raised very padded text container segment">
    <h2 class="ui header">New Post</h2>
    <form class="ui form" action="/friends/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
          <label>Title</label>
          <input type="text" name="friend[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="friend[image]" value="<%= blog.image %>">
          </div>
        <div class="ui form">
            <div class="field">
              <label>Content</label>
              <textarea type="text" name="friend[body]" required><%- blog.body %></textarea>
        </div>
       <a> <button class="ui secondary button">Save</button></a>
    </form>
    
  </div>
<%- include("partials/footer") %>